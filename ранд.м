модуль РАНД

  ;; повертає випадкове число між 0 та 1
  дія число() число
    global.Math.random()
  кінець

  ;; повертає випадкове ціле число у даному проміжку від мінімального значення (включно) до максимального (включно)
  дія проміжок(мін число, макс число) число
    макс = макс + 1
    різниця = макс-мін
    global.Math.trunc(число()*різниця + мін)
  кінець

  ;; повертає випадковий елемент списку
  дія елемент(список Список)
    довжина = 0 ;; спосіб знайти довжину списку, поки це не імплементовано через список.довжина(), потім оновити
    перебрати список як елемент
      довжина = довжина + 1
    кінець
    список(проміжок(0, список.довжина()-1))
  кінець

  ;; повертає випадкове логічне значення ("так" або "ні")
  дія логічне() число
    результат = проміжок(0, 1)
    якщо результат == 0
      результат = ні
    інакше
      результат = так
    кінець
    результат
  кінець

  дати число
  дати проміжок
  дати елемент
  дати логічне
кінець
